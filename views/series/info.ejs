<%- include('../partials/header') %>

    <section id="about">
      <div class="container">
        <div class="row">
          <div class="col-lg-8 mx-auto">
            <h2>Séries</h2>
            <p class="lead">Informações</p>
            <form method="POST">
                <div class="form-group">
                    <label for="seriesName"><%=serie.name%></label>
                    <div class="card bg-light mb-3">
                    <%serie.comments.forEach(c => {%>
                        <div class="card-body">
                        <p class="card-text"><%=c%></p>
                        <hr/>
                        </div>
                    <%})%>
                    </div>
                  <textarea class="form-control mt-4" name="comment"></textarea>
                  <button class="btn btn-primary">Adicionar comentário</button>
            </form>

          </div>
        </div>
      </div>
    </section>

    <%- include('../partials/footer') %>